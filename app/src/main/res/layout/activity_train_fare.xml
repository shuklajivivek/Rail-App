<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.railapp.trainFare">

    <EditText
        android:id="@+id/train"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="17dp"
        android:hint="TRAIN NO"
        android:inputType="number"
        android:maxLength="5"/>
    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/from_stn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/train"
        android:hint="SOURCE"
        android:maxLength="4"/>

    <EditText
        android:id="@+id/to_stn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="127dp"
        android:hint="DEST"

        android:maxLength="4"/>

    <EditText
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/to_stn"
        android:layout_marginTop="15dp"
        android:hint="dd-mm-yyyy"

        android:inputType="date"
        android:maxLength="10" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:id="@+id/pref"
        android:layout_below="@id/date"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="CLASS"
        android:layout_marginTop="15dp"

        android:maxLength="2"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height= "wrap_content"
        android:id="@+id/quota"
        android:layout_below="@id/pref"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="QUOTA CODE"
        android:layout_marginTop="15dp"

        android:maxLength="2"
        />

    <Button
        android:id="@+id/button_parse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="96dp"
        android:text="calculate FARE"
        android:textAllCaps="true"
        tools:ignore="InvalidId" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>